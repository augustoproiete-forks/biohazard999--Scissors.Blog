{
    "version": "0.1.0",
    "command": "PowerShell.exe",
    "isShellCommand": true,
    "args": [
        "-NoProfile",
        "./build.ps1"
    ],
    "tasks": [
        {
            "taskName": "Bake",
            "showOutput": "always",
            "isBuildCommand": true,
            "suppressTaskName": true,
            "args": [
                "-Target Only-Bake"
            ]
        },
        {
            "taskName": "Clean",
            "showOutput": "always",
            "isBuildCommand": true,
            "suppressTaskName": true,
            "args": [
                "-Target Clean"
            ]
        },
        {
            "taskName": "Full-Bake",
            "showOutput": "always",
            "isBuildCommand": true,
            "suppressTaskName": true
        },
        {
            "taskName": "Taste",
            "showOutput": "always",
            "isBuildCommand": false,
            "isTestCommand": true,
            "isWatching": false,
            "echoCommand": false,
            "suppressTaskName": true,
            "args": [
                "-Target Only-Taste"
            ]
        },
        {
            "taskName": "ingredient"
        }
    ]
}